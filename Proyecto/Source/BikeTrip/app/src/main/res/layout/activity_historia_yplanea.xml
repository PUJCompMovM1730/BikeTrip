<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.5">

        <TextView
            android:id="@+id/txtHistorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sus rutas realizadas son:"
            android:textAllCaps="true"
            android:textColorHighlight="@color/colorNaranja"
            android:textSize="10dp"
            android:textStyle="bold" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listHis"
            android:layout_weight="0.7">

        </ListView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.5">

        <TextView
            android:id="@+id/txtPlaneadas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sus rutas planeadas son:"
            android:textAllCaps="true"
            android:textColorHighlight="@color/colorNaranja"
            android:textSize="10dp"
            android:textStyle="bold" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listPlan"
            android:layout_weight="0.7">

        </ListView>

    </LinearLayout>

</LinearLayout>
